<%- contentFor('add') %>  
<div class="col-md-6">
<!-- general form elements -->
<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Add player</h3>
  </div>
  <!-- /.card-header -->
  <!-- form start -->
  <form  action="/players" method="post" enctype="multipart/form-data">
    <div class="card-body">
      <div class="form-group">
        <label>Player name</label>
        <input type="text" class="form-control" name="name" value="<%- users.name%>" placeholder="Enter the club name">
      </div>
      <div class="form-group">
        <label>Nation</label>
        <input type="text" class="form-control" name="nation" value="<%- users.nation%>" placeholder="Enter the stadium name">
      </div>      
      <div class="form-group">
        <label for="exampleInputPassword1">Birthday</label>
        <input type="text" class="form-control" name="birthday" placeholder="Enter the coach name">
      </div>
      <div class="form-group">
        <label >Image</label>
        <div class="input-group">
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="avatar" name="avatar">
            <label class="custom-file-label" for="exampleInputFile">Choose image</label>
          </div>
          <div class="input-group-append">
            <span class="input-group-text" id="">Upload</span>
          </div>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div>

</div>